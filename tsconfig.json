{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "baseUrl": "src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "moduleResolution": "node",
    "importHelpers": true,
    "stripInternal": true,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "listFiles": true,
    "declaration": false,
    "removeComments": false,
    "lib": [
      "es2015",
      "dom",
      "es2016.array.include"
    ]
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules"
  ]
}